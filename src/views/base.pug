doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") home
                    if loggedIn
                        li
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href=`/users/${loggedInUser._id}`) My Proflile 
                        li 
                            a(href="/users/edit") Edit prifile 
                        li  
                            a(href="/users/logout") Log Out
                        
                    else
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login 
                        li
                            a(href="/search") Search
                        
        main
            block content
    include partials/footer
    script(src="/static/js/main.js")